@model IEnumerable<ExamComicBook.Models.ComicBook>

@{
    ViewData["Title"] = "Comic Book List";
}

<h1 class="mt-4">📚 Comic Book List</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">+ Add New Comic</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Price Per Day</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Author</td>
                <td>@item.PricePerDay.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ComicBookID" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ComicBookID" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ComicBookID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>