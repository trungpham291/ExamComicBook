@model ExamComicBook.Models.ComicBook

@{
    ViewData["Title"] = "Comic Book Details";
}

<h1>Comic Book Details</h1>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Author</dd>

        <dt class="col-sm-2">Price Per Day</dt>
        <dd class="col-sm-10">@Model.PricePerDay.ToString("C")</dd>
    </dl>
</div>
<a asp-action="Edit" asp-route-id="@Model.ComicBookID" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
