@model ExamComicBook.Models.ComicBook


@{
    ViewData["Title"] = "Delete Comic Book";
}

<h1>Delete Comic Book</h1>

<h3>Are you sure you want to delete this comic?</h3>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Author</dd>

        <dt class="col-sm-2">Price Per Day</dt>
        <dd class="col-sm-10">@Model.PricePerDay.ToString("C")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="ComicBookID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
